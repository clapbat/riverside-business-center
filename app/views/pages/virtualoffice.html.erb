<!-- Basic Plan offcanvas -->
<div class="offcanvas offcanvas-end w-50" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
  <div class="offcanvas-header">
    <h4 class="offcanvas-title mx-4" id="offcanvasRightLabel">Complete form:</h4>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body mx-4">
    <%= form_with(model: @user, method: :post) do |form| %>
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
      <%= form.label :email %>
      <%= form.email_field :email, class: "form-control" %>
      <%= form.label :phone %>
      <%= form.telephone_field :phone, class: "form-control" %>
      <%= form.label :industry %>
      <%= form.text_field :industry, class: "form-control" %>
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control", id: "exampleFormControlTextarea1", rows: "3" %>
      <%= form.label :start_date %>
      <%= form.text_field :start_date, class: "form-control", placeholder: 'DD-MM-YY' %>
      <div class= 'form-button mt-4'>
        <%= form.submit "Send", class: 'orange-button' %>
      </div>
    <% end %>
  </div>
</div>

